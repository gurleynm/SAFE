<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Images/icon.jpg" rel="shortcut icon" type="image/x-icon" />
    <title>@ViewBag.Title - S.A.F.E.</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="background-image:url('Images/moneyFalling.jpg');">
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:darkgreen">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="color:white">
                    <li><a href="@Url.Action("Index", "Home")" style="color:white">S.A.F.E</a></li>
                    <li><a href="@Url.Action("About", "Home")" style="color:white">About</a></li>
                    <li><a href="@Url.Action("Contact", "Home")" style="color:white">Contact</a></li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <form class="form-inline pull-right; text-center" style="margin:5px">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>

    <div class="container body-content" style="background-color:white">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Property of EncAPPsulate</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
