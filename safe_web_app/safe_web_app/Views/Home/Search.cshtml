@using safe_web_app.Models
@model List<Application>
@{
    ViewBag.Title = "Home Page";    
}

<div class="jumbotron">
    <h1><img src="~/Images/icon.jpg" alt="icon" height="60" width="60" /> Search Results</h1>    
</div>

<div class="row" style="margin:4px">
    @if(Model.Count == 0)
    {
        <p style="color:red;">Whelp...We didn't find any results for that search. Please try again.</p>
    }
    @foreach (var app in Model)
    {
        <div class="col-md-4">
            <h2><img src="@app.imageUrl" alt="" height="42" width="42" /> @app.title</h2>
            <p>
                @app.app_desc
            </p>
            <p><strong>Rating: </strong>@app.rating</p>
            <p>
                <a class="btn btn-primary" href="#" target="_blank">Learn more &raquo;</a>
            </p>
        </div>
    }
</div>

