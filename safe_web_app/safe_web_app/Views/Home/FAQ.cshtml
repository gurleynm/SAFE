@using safe_web_app.Models
@model FAQViewModel
@{
    ViewBag.Title = "FAQ";
}

@*Request page where users can submit application requests to admin for review*@

<h2>FAQ Submission</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("FAQ", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Please fill out the question details.</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @*Beginning of form to submit question. Needs only question. *@
                <div class="form-group">
                    @*Title variable*@
                    @Html.LabelFor(r => r.Question, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(r => r.Question, new { @class = "form-control" })
                        @Html.ValidationMessageFor(r => r.Question, "", new { @class = "text-danger" })
                    </div>
                </div>
                @*Submit button*@
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Submit" class="btn btn-default" />
                    </div>
                    @if (ViewBag.Submitted)
                    {
                        <h3 style="color:green">Thank you! Your question was submitted and will be reviewed.</h3>
                    }
                </div>
            }
        </section>
    </div>
    <div class="col-md-4">

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}